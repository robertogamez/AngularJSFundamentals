<div class="container" ng-cloak>
    <div ng-controller="EventController">

        @Html.ActionLink("New Event", "Edit", "Home", null, new { @class = "btn btn-link" })

        <img ng-src="{{event.imageUrl}}" title="event.name" />

        <div class="row">
            <div class="col-md-11" ng-style="mystyle">
                <h2 ng-class="myclass"> {{event.name | uppercase}} </h2>
            </div>
        </div>

        <div ng-bind-html="snippet">some title</div>

        <button class="btn" ng-disabled="buttonDisabled">Disabled</button>

        <h2 ng-show="boolValue">Show This</h2>
        <h2 ng-hide="boolValue">Hide This</h2>

        <div class="row">
            <div class="col-md-3">
                <div>
                    <strong>
                        Date:
                    </strong>
                    {{event.date}}
                </div>
                <div>
                    <strong>
                        Date:
                    </strong>
                    {{event.time}}
                </div>
                <div>
                    <strong>
                        Price:
                    </strong>
                    {{ 34.00 | currency }}
                </div>
            </div>
            <div class="col-md-4">
                <address>
                    <strong>Address:</strong> <br />
                    {{event.location.address}}<br />
                    {{event.location.city}} - 
                    {{event.location.state}}
                </address>
            </div>
        </div>

        <hr />

        <h3>
            Sessions
        </h3>

        OrderBy:
        <select ng-model="sortorder" class="input-small">
            <option selected value="name">Name</option>
            <option value="-upVoteCount">Votes</option>
        </select>

        Show:
        <select ng-model="query.level" class="input-medium">
            <option selected value="">All</option>
            <option value="introductory">Introductory</option>
            <option value="intermediate">Intermediate</option>
            <option value="advanced">Advanced</option>
        </select>

        <ul class="list-group">
            <li class="list-group-item" 
                ng-repeat="session in event.sessions 
                        | orderBy:sortorder
                        | limitTo:2
                        | filter:query">
                <div class="row">
                    <div class="col-md-1">
                        <div class="" ng-click="upVoteSession(session)">
                            <i class="glyphicon glyphicon-chevron-up"></i>
                        </div>
                        <div class="badge">
                            <div>{{session.upVoteCount}}</div>
                        </div>
                        <div class="" ng-click="downVoteSession(session)">
                            <i class="glyphicon glyphicon-chevron-down"></i>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <h4>{{session.name}}</h4>
                        <h6>{{session.creatorName}}</h6>
                        <span>Duration: {{session.duration | durations}}</span><br />
                        <span>Level: {{session.level}}</span>
                    </div>
                </div>
            </li>
        </ul>

    </div>
</div>

@section scripts {
    <script src="~/app/js/controllers/EventController.js"></script>
}
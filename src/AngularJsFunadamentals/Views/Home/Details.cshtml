<div class="container">
    <div ng-controller="EventController">

        <img ng-src="{{event.imageUrl}}" title="event.name" />

        <div class="row">
            <div class="col-md-11">
                {{event.name}}
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <div>
                    <strong>
                        Date:
                    </strong>
                    {{event.date}}
                </div>
                <div>
                    <strong>
                        Date:
                    </strong>
                    {{event.time}}
                </div>
            </div>
            <div class="col-md-4">
                <address>
                    <strong>Address:</strong> <br />
                    {{event.location.address}}<br />
                    {{event.location.city}} - 
                    {{event.location.state}}
                </address>
            </div>
        </div>

        <hr />

        <h3>
            Sessions
        </h3>
        <ul class="list-group">
            <li class="list-group-item" 
                ng-repeat="session in event.sessions">
                <div class="row">
                    <div class="col-md-1">
                        <div class="" ng-click="upVoteSession(session)">
                            <i class="glyphicon glyphicon-chevron-up"></i>
                        </div>
                        <div class="badge">
                            <div>{{session.upVoteCount}}</div>
                        </div>
                        <div class="" ng-click="downVoteSession(session)">
                            <i class="glyphicon glyphicon-chevron-down"></i>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <h4>{{session.name}}</h4>
                        <h6>{{session.creatorName}}</h6>
                        <span>Duration: {{session.duration}}</span>
                        <span>Level: {{session.level}}</span>
                    </div>
                </div>
            </li>
        </ul>

    </div>
</div>

@section scripts {
    <script src="~/app/js/controllers/EventController.js"></script>
}